<h1>Пользователи</h1>

<div class="row">
  <div class="col-sm-8 col-sm-offset-1 col-md-3 col-md-offset-1">
        <hr>
      </div>
</div>

<% if  !@users.empty?
     @users.each do |user|
%>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-1 col-md-3 col-md-offset-1">
      <%= link_to user.email,  edit_user_registration_path(user)%>
      <%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Удалить запись?' }, :class => "btn btn-warning" %>
    </div>

  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-1 col-md-3 col-md-offset-1">
          <hr>
        </div>
  </div>
<%   end #loop
   else
%>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-1">
      <div class="alert alert-info">
        Данные не найдены...
      </div>
  </div>

  </div>
<% end # if empty?%>

