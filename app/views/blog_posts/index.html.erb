<h1>Blog Posts</h1>



<% if current_user.is_admin? %>
  <div class="row">
    <div class="col-sm-2 col-sm-offset-8">
      <%= link_to 'Post news', new_blog_post_path, class: "btn btn-success pull-right" %>
    </div>
  </div>
<% end %>


<% if  !@blog_posts.empty?
     @blog_posts.each do |blog_post|
%>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h3><%= blog_post.title %></h3>
      <article><p class="text-justify">
          <%= blog_post.content[0..700] %>
          <% if blog_post.content.length > 700%>...<%end%>
      </p></article>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-7 col-sm-offset-2 col-md-offset-2">
      <% if blog_post.content.length > 700%>
        <i><%= link_to 'Read more...', blog_post %><i>
      <% end %>
    </div>
    <div class="col-sm-3 col-md-1">
      <%= blog_post.publish_date.strftime("%d.%m.%Y %H:%M") %>
    </div>
  </div>

  <% if current_user.is_admin? %>
    <div class="row">
      <div class="col-sm-3 col-sm-offset-2">
        <%= link_to 'Edit', edit_blog_post_path(blog_post), :class => "btn btn-success" %>
        <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning" %>
      </div>

    </div>
  <% end %>

  <hr>
<%   end #loop
   else
%>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="alert alert-info">
        Данные не найдены
      </div>
  </div>

  </div>
<% end # if empty?%>

