<h1>Blog Posts</h1>


<% if current_user.is_admin? %>
  <div>
    <%= link_to '+', new_blog_post_path, class: "btn btn-success" %>
  </div>
<% end %>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Publish date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if  !@blog_posts.empty?
         @blog_posts.each do |blog_post|
    %>
      <tr>
        <td><%= blog_post.title %></td>
        <td><%= blog_post.content%> <br> </td>
        <td>
            <%= blog_post.publish_date.strftime("%d.%m.%Y") %> <br>
            <%= blog_post.publish_date.strftime("%H:%M") %>
        </td>
        <td><%= link_to 'Show', blog_post %></td>
        <% if current_user.is_admin? %>
          <td><%= link_to 'Edit', edit_blog_post_path(blog_post) %> </td>
          <td><%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td><td></td>
        <% end %>
      </tr>
    <% end #loop
       else
    %>
      <tr>
         <td> Данные не найдены</td><td></td><td></td><td></td><td></td><td></td>
       </tr>
    <% end # if empty?%>
  </tbody>
</table>


